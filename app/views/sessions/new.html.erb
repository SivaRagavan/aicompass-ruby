<div class="card" style="max-width: 480px;">
  <h1>Sign in</h1>
  <p class="card-subtitle">Access your private equity company assessments.</p>

  <%= form_with url: signin_path, method: :post, class: "form-grid" do %>
    <div class="input-group">
      <%= label_tag :email, "Email" %>
      <%= email_field_tag :email, params[:email], placeholder: "you@firm.com" %>
    </div>
    <div class="input-group">
      <%= label_tag :password, "Password" %>
      <%= password_field_tag :password, nil, placeholder: "••••••••" %>
    </div>
    <div class="card-footer">
      <%= submit_tag "Sign in", class: "button" %>
      <%= link_to "Need an account?", register_path, class: "button ghost" %>
    </div>
  <% end %>
</div>
