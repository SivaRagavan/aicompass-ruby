<div class="card">
  <h1>Company</h1>
  <p class="card-subtitle">Enter a company name to get started.</p>

  <%= form_with url: company_path(@assessment.invite_token), method: :patch, class: "form-grid" do %>
    <div class="input-group">
      <%= label_tag :company_name, "Company Name" %>
      <%= text_field_tag :company_name, @assessment.company_name %>
    </div>
    <div class="card-footer">
      <%= submit_tag "Continue", class: "button" %>
      <%= link_to "Back", invite_path(@assessment.invite_token), class: "button secondary" %>
    </div>
  <% end %>
</div>
