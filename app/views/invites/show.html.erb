<div class="card">
  <h1>Assessor profile</h1>
  <p class="card-subtitle">
    Share your details before completing the assessment.
  </p>

  <%= form_with url: invite_path(@assessment.invite_token), method: :patch, class: "form-grid" do %>
    <div class="grid-two">
      <div class="input-group">
        <%= label_tag :exec_name, "Your name" %>
        <%= text_field_tag :exec_name, @profile["name"] %>
      </div>
      <div class="input-group">
        <%= label_tag :exec_email, "Work email" %>
        <%= email_field_tag :exec_email, @profile["email"] %>
      </div>
    </div>
    <div class="card-footer">
      <%= submit_tag "Continue to assessment", class: "button" %>
    </div>
  <% end %>
</div>
