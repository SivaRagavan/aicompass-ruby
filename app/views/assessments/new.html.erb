<div class="rounded-[18px] border border-[var(--border)] bg-[#fffaf3] p-[30px] shadow-[0_18px_40px_rgba(31,41,51,0.08)]">
  <h1 class="text-[28px] tracking-[-0.02em]">New assessment</h1>
  <p class="mt-2 leading-[1.6] text-[var(--muted-foreground)]">Invite someone from the company or take the assessment yourself.</p>

  <%= form_with url: assessments_path, method: :post, class: "grid gap-4" do %>
    <div class="flex flex-col gap-2">
      <%= label_tag :company_name, "Company Name", class: "text-sm font-semibold text-[#374151]" %>
      <%= text_field_tag :company_name, @assessment.company_name, placeholder: "Northbridge Manufacturing", class: "rounded-[12px] border border-[var(--border)] bg-[#fffaf3] px-3.5 py-2.5 text-sm" %>
    </div>
    <div class="mt-6 flex flex-wrap gap-3">
      <%= button_tag "Start assessment", name: "start_now", value: "1", class: "inline-flex items-center justify-center gap-2 rounded-full bg-[#2f8f62] px-5 py-2.5 font-semibold text-slate-50" %>
      <%= submit_tag "Invite someone to take assessment", class: "inline-flex items-center justify-center gap-2 rounded-full bg-[#1f6f5b] px-5 py-2.5 font-semibold text-slate-50" %>
    </div>
  <% end %>
</div>
